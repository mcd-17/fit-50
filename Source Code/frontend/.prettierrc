{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": ["**/*"],
            "options": {
                "parser": "babel"
            }
        },
        {
            "files": ["*.css", "*.scss"],
            "options": {
                "parser": "postcss"
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "parser": "html"
            }
        },
        {
            "files":["*.js", "*.jsx"],
            "options": {
                "parser": "babel"

                }
        }
    ],
    "plugins": ["prettier-plugin-tailwindcss"]
}
